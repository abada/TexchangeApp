<Alloy>
	<Window class="container">
		<TextField id="userId" color="#336699" top="40" left="35" hintText="ユーザ名"/>
		<TextField id="password" color="#336699" top="130" left="35" hintText="パスワード"/>
		<Button id="loginBtn" title="ログイン" onClick="login" top="200" width="150" height="60" />
		<Button id="facebookLoginButton" class="facebook" title="Facebookでログイン" onClick="loginByFacebook" top="300" width="150"/>
		<Button id="twitterLoginButton" class="twitter" title="Twitterでログイン" onClick="loginByTwitter" top="350" width="150"/>
		<Switch id="remembermeSwitch" value="true" top="400" left="35"/>
		<Label top="400" left="105">ログイン状態を維持</Label>
	</Window>
</Alloy>