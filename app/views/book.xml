<Alloy>
	<Window class="container" layout="vertical">
		<ScrollView layout="vertical">
			<Label id="book_title" class="title" top="5%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label>
			<Label id="book_author" class="book-body" top="3%"></Label>
			<ImageView id="book_image" class="book-image" top="5%" height="30%"/>
			<View class="book-info" layout="vertical">
				<Label id="book_category" class="book-body" top="5px"></Label>
				<Label id="book_point" class="book-body" top="1%"></Label>
				<Label id="book_price" class="book-body" top="1%"></Label>
				<Label id="book_count" class="book-body"></Label>
			</View>
		</ScrollView>
	</Window>
</Alloy>