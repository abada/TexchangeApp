<Alloy>
    <!-- ios -->
    <NavigationWindow id="confirmationRootWindow" platform="ios">
        <Window id="confirmationWindow" class="container" title="出品">

            <ImageView id="itemImage" />
            <Label id="itemTitle" />
            <Label id="itemAuthor" />
            <Label id="itemPrice" />
            <ListView id="categoriesView" canScroll="false" defaultItemTemplate="Titanium.UI.LIST_ITEM_TEMPLATE_SETTINGS">
                <ListSection id="categoriesSection">
                    <ListItem title="大学" itemId="mainCategory" subtitle="選択してください" />
                    <ListItem title="学部" itemId="subCategory" subtitle="選択してください" />
                </ListSection>
            </ListView>
            <Button id="exhibit" title="出品" onClick="exhibit" />
            <Button id="cancel" title="キャンセル" class="cancel" onClick="cancel" />
        </Window>
    </NavigationWindow>
    <!-- android -->
    <Window id="confirmationWindow" class="container" title="出品" platform="android">

        <ImageView id="itemImage" />
        <Label id="itemTitle" />
        <Label id="itemAuthor" />
        <Label id="itemPrice" />
        <ListView id="categoriesView" canScroll="false">
            <ListSection id="categoriesSection">
                <ListItem title="大学を選択" itemId="mainCategory" color="black" />
                <ListItem title="学部を選択" itemId="subCategory" color="black" />
            </ListSection>
        </ListView>
        <Button id="exhibit" title="出品" onClick="exhibit" />
        <Button id="cancel" title="キャンセル" class="cancel" onClick="cancel" />
    </Window>
</Alloy>
